{
	"name": "NMT NOBO Debugger",
	"version": "0.1.1",
	"manifest_version": 2,
	"description": "Show comScore/NOBO requests for current page",

	"icons": {
		"48": "icons/icon-nobo.png",
		"128": "icons/icon-nobo-128.png"
	},

	"permissions": [
		"tabs",
		"webRequest",
		"http://*/",
		"https://*/"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"page_action": {
		"default_icon": "icons/icon-nobo.png",
		"default_title": "NOBO-tracker detected, click for details",
		"default_popup": "popup.html"
	}
}
